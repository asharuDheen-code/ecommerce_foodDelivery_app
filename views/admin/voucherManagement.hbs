<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
<link rel="stylesheet" href="/stylesheets/profile.css" />


<style>
    #sec {
        width: 100%;
        height: auto;
    }

    .container {
        margin-left: 317px;
        margin-top: 35px;
        width: 75%;
        background: #313348;
    }

    #voucher {
        background-color: #2a2b3d;
    }
</style>

<section id="sec">

    <body id="voucher">
        <div class="container">
            <h2 style="color: #ccc;">Voucher Managment</h2>
            <table class="table table-bordered table-hover">
                <thead>
                    <th scope="col" style="color: #ccc;">ID</th>
                    <th scope="col" style="color: #ccc;">Voucher</th>
                    <th scope="col" style="color: #ccc;">Offer</th>
                    <th scope="col" style="color: #ccc;">Start Offer</th>
                    <th scope="col" style="color: #ccc;">End Offer</th>
                    <th scope="col"></th>
                </thead>
                <tbody style="color: #ccc;">
                    {{#each coupons}}
                    <tr>
                        <th style="color: #ccc;" scope="row">#1</th>
                        <td>{{voucher}}</td>
                        <td>{{offer}}%</td>
                        <td>{{startDate}}</td>
                        <td>{{endDate}}</td>
                        <td class="text-right">
                            <a href="">
                                <i class="fas fa-trash mr-3"></i>
                            </a>
                            <a href="">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        {{!-- Popup Edit profile --}}
        <div class="modal fade" id="editProfile" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header text-center">
                        <h4 class="modal-title w-100 font-weight-bold">Write to us</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form id="addAddressForm">
                        <div class="modal-body mx-3">
                            <div class="md-form mb-5" style="margin-bottom: 1px !important;">
                                {{!-- <i class="fas fa-user prefix grey-text"></i> --}}
                                <input value="" type="date" id="startDate" class="form-control validate">
                                <label data-error="wrong" data-success="right" for="form34">Start
                                    Date</label>
                            </div>

                            <div class="md-form mb-5" style="margin-bottom: 1px !important;">
                                {{!-- <i class="fas fa-tag prefix grey-text"></i> --}}
                                <input value="" type="date" id="endDate" class="form-control validate">
                                <label data-error="wrong" data-success="right" for="form32">End Date</label>
                            </div>

                            <div class="md-form mb-5" style="margin-bottom: 1px !important;">
                                {{!-- <i class="fas fa-tag prefix grey-text"></i> --}}
                                <input value="" type="text" id="offer" class="form-control validate">
                                <label data-error="wrong" data-success="right" for="form32">Offer</label>
                            </div>

                            <div class="md-form mb-5" style="margin-bottom: 1px !important;">
                                {{!-- <i class="fas fa-tag prefix grey-text"></i> --}}
                                <div style="display: flex;">
                                    <input value="" type="text" id="generateCode" placeholder="Generate or Enter Code"
                                        class="form-control validate" style="width: 358px;">
                                    <button type="button" id="generate" class="btn btn-success"
                                        style="width: 80px; margin-top: 29px; height: 35px; margin-left: 10px;"><span
                                            style="margin-left: -4px;">Generate</span></button>
                                </div>

                                <label data-error="wrong" data-success="right" for="form32">Voucher Code</label>
                            </div>

                        </div>
                        <div class="modal-footer d-flex justify-content-center">
                            <button type="button" class="btn btn-unique" id="generateCoupen">Send</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="text-center" style="float: right; margin-right: 23px;">
            <a href="" class="btn btn-outline-success" data-toggle="modal" id="editProfile" type="button"
                data-target="#editProfile">Generate Voucher</a>
        </div>

        {{!-- END Popup Edit profile --}}
    </body>
</section>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="/javascripts/user/profile.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"></script>

<script>
    $('#generateCoupen').click(() => {
        alert("hiii")
        let startDate = $('#startDate').val()
        let endDate = $('#endDate').val()
        let offer = $('#offer').val()
        let voucher = $('#generateCode').val()
        $.ajax({
            url: "/admin/addVoucher",
            method: "post",
            data: {
                startDate,
                endDate,
                offer,
                voucher,
            },
            success: (response) => {

            }
        })
    })

    $('#generate').click(() => {
        $.ajax({
            url: '/admin/generateCode',
            method: 'get',
            success: (code) => {
                $('#generateCode').val(code)
            }
        })
    })
</script>