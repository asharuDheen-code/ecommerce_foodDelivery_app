<style>
    .viewUser {
        background-color: #2a2b3d;
    }

    #user {
        background-color: #2a2b3d;
    }

    .table-dark {
        background-color: #313348;
    }

    .container {
        display: flex;
        justify-content: center;
        max-width: 100%;
        width: 100%;
        margin-right: 80px;
    }
</style>


<section class="viewUser">

    <body id="user">
        <div class="container" >
            <div class="col-lg-8 col-lg-offset-2">
                <h1 style="color: #ccc;">User Section</h1>
                <div class="row mt-4">
                    <a href="/admin/add-users" class="btn btn-success ml-auto">Add user</a>
                </div>
                <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names.."
                    title="Type in a name">

                <table class="table table-dark mt-3" id="myTable">
                    <thead>
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            {{!-- <th scope="col">password</th> --}}
                            {{!-- <th scope="col">Image</th> --}}
                        </tr>
                    </thead>
                    <tbody>
                        {{#each users}}
                        <tr>
                            <th scope="row"> {{@index}} </th>
                            <td>{{this.username}}</td>
                            <td>{{this.email}}</td>
                            {{!-- <td>{{this.password}}</td> --}}
                            {{!-- <td><img style="width: 50px; heigth: 50px" src="/product-image/{{this._id}}.jpg" alt=""> </td> --}}
                            <td style="text-align: right;">
                                <a href="/admin/blockUser/{{this._id}}" class="btn btn-danger">block</a>
                                <a href="/admin/edit-users/{{this._id}}" class="btn btn-primary">Edit</a>
                                <a href="/admin/delete-users?id={{this._id}}" class="btn btn-danger"
                                    onclick="return confirm('are you sure want delete {{this.name}} ?')">Delete</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </body>

</section>


<script>
    function myFunction() {
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("myInput");
        filter = input.value.toUpperCase();
        table = document.getElementById("myTable");
        tr = table.getElementsByTagName("tr");
        for (i = 0; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td")[0];
            if (td) {
                txtValue = td.textContent || td.innerText;
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    }
</script>