<section>

    <body oncontextmenu='return false' class='snippet-body'>
        <div class="container-fluid my-5 d-flex justify-content-center" style="margin-top: 6rem !important;">
            <div class="card card-1">
                <div class="card-header bg-white">
                    <div class="media flex-sm-row flex-column-reverse justify-content-between ">
                        <div class="col my-auto">
                            <h4 class="mb-0">Thanks for your Order<span class="change-color"></span> !</h4>
                        </div>
                        <div class="col-auto text-center my-auto pl-0 pt-sm-4"> <img
                                class="img-fluid my-auto align-items-center mb-0 pt-3" src="images/logo.png" width="70"
                                height="70">
                            <p class="mb-4 pt-0 Glasses">Food For Everyone</p>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row justify-content-between mb-3">
                        <div class="col-auto">
                            <h6 class="color-1 mb-0 change-color">Receipt</h6>
                        </div>
                        <div class="col-auto "> <small>Receipt Voucher : 1KAU9-84UIL</small> </div>
                    </div>
                    {{#each orders}}
                    <div class="row">
                        <div class="col">
                            <div class="card card-2">
                                <div class="card-body">
                                    <div class="media">
                                        <div class="sq align-self-center "> <img
                                                class="img-fluid my-auto align-self-center mr-2 mr-md-4 pl-0 p-0 m-0"
                                                src="images/logo.png" width="100" height="100" /> </div>
                                        <div class="media-body my-auto text-right">
                                            <div class="row my-auto flex-column flex-md-row">
                                                <div class="col my-auto">
                                                    <h6 class="mb-0"> {{deliveryDetails.name}}</h6>
                                                </div>
                                                <div class="col-auto my-auto">
                                                    <small>{{ date }}</small></div>
                                                <div class="col my-auto"> <small>Type : {{paymentMethod}}</small></div>
                                                <div class="col my-auto"> <small>Order Status : <span style="color: red;">{{status}}</span></small></div>
                                                <div class="col my-auto">
                                                    <h6 class="mb-0"> Total Amount &#8377;{{total}}</h6>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <hr class="my-3 ">
                                    <div class="row">
                                        <a href="/view-order-products/{{this._id}}" class="btn btn-success"
                                            style="margin-left: auto;">More Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    <div class="row mt-4">
                        <div class="col">
                            <div class="row justify-content-between">
                                <div class="col-auto">
                                    <p class="mb-1 text-dark"><b>Order Details</b></p>
                                </div>
                                <div class="flex-sm-col text-right col">
                                    <p class="mb-1"><b>Total</b></p>
                                </div>
                                <div class="flex-sm-col col-auto">
                                    <p class="mb-1">&#8377;4,835</p>
                                </div>
                            </div>
                            <div class="row justify-content-between">
                                <div class="flex-sm-col text-right col">
                                    <p class="mb-1"> <b>Discount</b></p>
                                </div>
                                <div class="flex-sm-col col-auto">
                                    <p class="mb-1">&#8377;150</p>
                                </div>
                            </div>
                            <div class="row justify-content-between">
                                <div class="flex-sm-col text-right col">
                                    <p class="mb-1"><b>GST 18%</b></p>
                                </div>
                                <div class="flex-sm-col col-auto">
                                    <p class="mb-1">843</p>
                                </div>
                            </div>
                            <div class="row justify-content-between">
                                <div class="flex-sm-col text-right col">
                                    <p class="mb-1"><b>Delivery Charges</b></p>
                                </div>
                                <div class="flex-sm-col col-auto">
                                    <p class="mb-1">Free</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row invoice ">
                        <div class="col">
                            <p class="mb-1"> Invoice Number : 788152</p>
                            <p class="mb-1">Invoice Date : 22 Dec,2019</p>
