{{#if products}}
<style>
    .collapse {
        margin-right: 70px;
    }

    .dropbtn {
        margin-right: 60px;
    }
</style>

<section>

    <body class="cart" data-spy="scroll" data-target=".navbar" data-offset="50">
        <div id="Welcome">
            <div>
                <div class="cart">
                    <div class="shopping-cart">
                        <!-- Title -->
                        <div class="title">
                            Swiss Knife
                        </div>

                        {{#each products}}
                        <div class="item" style="display: flex; justify-content: center;">
                            <div class="buttons">
                                <span class="delete-btn"></span>
                                <span class="like-btn"></span>
                            </div>

                            <div class="image">
                                <img style="width: 100px; height: 65px;" src="/product-image/{{this.product._id}}.jpg"
                                    alt="" />
                            </div>
                            <div class="description">
                                <span>{{this.product.name}}</span>
                                <span>Non Veg</span>
                            </div>
                            <div class="total-price">â‚¹{{this.product.price}}</div>
                            <div class="quantity">
                                <button class="minus-btn"
                                    onclick="changeQuantity('{{this._id}}','{{this.product._id}}', '{{../cartUser}}', -1)">-
                                </button>
                                <span id="{{this.product._id}}">{{this.quantity}}</span>
                                <button class="plus-btn"
                                    onclick="changeQuantity('{{this._id}}','{{this.product._id}}', '{{../cartUser}}', 1)">+
                                </button>
                            </div>
                            <div class="quantity">
                                <button onclick="deleteOneItem('{{this._id}}','{{this.product._id}}')" id=""
                                    class="dltBtn">Delete</button>
                            </div>
                        </div>
                        {{/each}}
                        <div class="cartTotalPrice floa-right pr-5">
                            <h3 float-left mr-5>Total: â‚¹<span id="total">{{total}}</span> </h3>
                            <a href="/place-order" class="btn btn-success mt-3" style="width: 100%;">Place Order</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <script>
            function deleteOneItem(cartId, proId) {
                if (confirm("Are you sure")) {
                    $.ajax({
                        url: '/delete-one-item',
                        data: {
                            cart: cartId,
                            product: proId,
                        },
                        method: 'post',
                        success: (response) => {
                            if (response.removeProduct) {
                                alert("Are you sure")
                                location.reload()
                            }
                        }
                    })
                }
            }
        </script>

        <script>
            function changeQuantity(cartId, proId, userId, count) {
                let quantity = parseInt(document.getElementById(proId).innerHTML)
                count = parseInt(count)
                $.ajax({
                    url: '/change-product-quantity',
                    data: {
                        user: userId,
                        cart: cartId,
                        product: proId,
                        count: count,
                        quantity: quantity,
                    },
                    method: 'post',
                    success: (response) => {
                        if (response.removeProduct) {
                            alert("Are you sure")
                            location.reload()
                        } else {
                            document.getElementById(proId).innerHTML = quantity + count
                            document.getElementById('total').innerHTML = response.total
                        }
                    }
                })
            }
        </script>
    </body>
</section>

